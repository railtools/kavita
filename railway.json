{
  "build": {
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "healthcheckPath": "/",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "PUID": "0",
    "PGID": "0",
    "TZ": "Etc/UTC",
    "RAILWAY_RUN_UID": "0"
  },
  "ports": [
    {
      "port": 8080,       // what Railway listens on
      "targetPort": 5000, // what your app listens on inside the container
      "protocol": "TCP"
    }
  ],
  "environments": {}
}